<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="380dp"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:contentDescription="profile_image" />

        <TextView
            android:id="@+id/firstName"
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:width="100dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

<!--        <View
            android:id="@+id/item_swipe_right_indicator"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:alpha="0"
            android:background="#5AF" />-->

      <!--  <View
            android:id="@+id/item_swipe_left_indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:alpha="0"
            android:background="#A5F" />-->

        <TextView
            android:id="@+id/tag_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag_share"
            android:background="@android:color/background_light"
            android:textColor="@color/color_freeskill"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_share_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/tag_discover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tag_discover"
            android:background="@android:color/background_light"
            android:textColor="@color/color_freeskill"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_discover_content"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/background_light"
            android:text="TextView" />

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="226dp"
            android:background="@android:color/background_light"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>