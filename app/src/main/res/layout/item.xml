<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="460dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:background="@android:color/background_light">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="8dp"
            android:contentDescription="profile_image"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/firstName"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="343dp"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:background="@android:color/darker_gray"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <!--        <View
            android:id="@+id/item_swipe_right_indicator"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:alpha="0"
            android:background="#5AF" />-->

        <!--  <View
            android:id="@+id/item_swipe_left_indicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:alpha="0"
            android:background="#A5F" />-->

            <RatingBar
                android:id="@+id/mark"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/background_light"
                android:isIndicator="true"
                android:numStars="@integer/stars_number"
                android:progressDrawable="@drawable/ratingbar_yellow"
                android:rating="3.5" />

        <TextView
            android:id="@+id/tag_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:text="@string/tag_share"
            android:textColor="@color/color_freeskill"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_share_content"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@android:color/background_light" />

        <TextView
            android:id="@+id/tag_discover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:text="@string/tag_discover"
            android:textColor="@color/color_freeskill"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tag_discover_content"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@android:color/background_light" />


        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="match_parent"
            android:layout_height="248dp"
            android:background="@android:color/background_light"
            android:textSize="11sp" />


    </LinearLayout>

</FrameLayout>