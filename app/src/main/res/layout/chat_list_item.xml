<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ChatListItemImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/freeskill_logo_android"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/ChatListItemTextusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/ChatListItemTextDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/ChatListItemTextLastMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ChatListItemTextusername"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/ChatListItemImageView"
        android:maxLines="1"
        android:text="@string/noMessage" />
</RelativeLayout>