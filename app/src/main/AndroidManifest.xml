<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="freeskill.app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/freeskill_logo_android"
        android:label="@string/app_name"
        android:name=".FreeskillApplication"
        android:roundIcon="@drawable/freeskill_logo_android"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="freeskill.app.controller.HomepageScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="freeskill.app.test.DisplayMessageActivity"
            android:label="Test connexion"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.controller.HomepageScreen" >
        </activity>
        <activity android:name="freeskill.app.controller.SettingsScreen"
            android:label="ParamÃ¨tres"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.test.DisplayMessageActivity" >
        </activity>
        <activity android:name="freeskill.app.controller.ProfileScreen"
            android:label="Profil"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.test.DisplayMessageActivity" >
        </activity>
        <activity android:name="freeskill.app.test.Test"
        android:label="Test"
        android:screenOrientation="portrait"
        android:parentActivityName="freeskill.app.controller.HomepageScreen" >
        </activity>
        <activity android:name="freeskill.app.controller.SwipeScreen"
            android:label="Swipe"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.test.Test" >
        </activity>
        <activity android:name="freeskill.app.test.UnderConstruction"
            android:label="En travaux"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.controller.ProfileScreen" >
        </activity>
        <activity android:name="freeskill.app.controller.UserRegistrationScreen"
            android:label="Inscription utilisateur"
            android:screenOrientation="portrait"
            android:parentActivityName="freeskill.app.controller.HomepageScreen" >
        </activity>
        <activity android:name=".controller.ChatListActivity"
            android:label="ChatList"
            android:screenOrientation="portrait"
            android:parentActivityName=".test.Test">
        </activity>
    </application>

</manifest>